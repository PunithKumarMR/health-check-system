# ========================
# Primary Database Configuration (mito_inventory)
# ========================
DB_HOST=db.example.com
DB_PORT=3306
DB_USER=db_user
DB_PASSWORD=yourpassword
DB_NAME=mito_inventory

# ========================
# Zabbix Database Configuration
# ========================
ZABBIX_DB_HOST=zabbix.example.com
ZABBIX_DB_PORT=3306
ZABBIX_DB_USER=zabbix_user
ZABBIX_DB_PASS=yourzabbixpass
ZABBIX_DB_NAME=zabbixDB

# ========================
# Mito Proxy Configuration
# All 4 proxies use same credentials
# ========================
MITO_PROXY_USER=proxy_user
MITO_PROXY_PASSWORD=proxy_password

# ========================
# App Server Configuration
# All 4 servers use same credentials
# ========================
APP_SERVER_USER=app_user
APP_SERVER_PASSWORD=app_password

# ========================
# NIAM Configuration
# ========================
NIAM_INTERMEDIATE=10.0.0.10

# ========================
# Application Settings
# ========================
ENVIRONMENT=development
LOG_LEVEL=DEBUG
MAX_CONCURRENT_CHECKS=50
HC_POLL_INTERVAL=30s
HC_MAX_WAIT=80m
